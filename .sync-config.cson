remote:
  host: "HOST_NICKNAME"
  user: "USER"
  path: "TARGET_ROOT"
behaviour:
  uploadOnSave: true
  syncDownOnOpen: false
  forgetConsole: false
  autoHideConsole: true
  alwaysSyncAll: true
option:
  deleteFiles: true
  autoHideDelay: 5000
  exclude: [
    ".DS_Store"
    ".sync-config.cson"
    ".gitattributes"
    ".gitmodules"
    ".gitignore"
    ".git"
    "node_modules"
    "tmp"
    "vendor"
  ]
  flags: "avzu"
  shell: "ssh"